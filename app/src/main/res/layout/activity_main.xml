<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.habitap.pinentry.demo.MainActivity">

    <app.habitap.pinentry.PinEntryView
        android:id="@+id/pinEntryOtp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:accentType="none"
        app:digitBackground="@drawable/digit_bg_boxed"
        app:digitHeight="64dp"
        app:digitSpacing="6dp"
        app:digitTextColor="@color/black"
        app:digitTextSize="32sp"
        app:digitWidth="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:numDigits="6"
        app:pinInputType="number" />

    <app.habitap.pinentry.PinEntryView
        android:id="@+id/pinEntryOtp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:accentType="character"
        app:digitBackground="?attr/editTextBackground"
        app:digitHeight="64dp"
        app:digitSpacing="6dp"
        app:digitTextColor="@color/black"
        app:digitTextSize="32sp"
        app:digitWidth="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinEntryOtp1"
        app:mask="*"
        app:numDigits="6" />

    <app.habitap.pinentry.PinEntryView
        android:id="@+id/pinEntryOtp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/editTextBackground"
        app:accentType="all"
        app:digitHeight="64dp"
        app:digitSpacing="6dp"
        app:digitTextColor="@color/black"
        app:digitTextSize="32sp"
        app:digitWidth="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinEntryOtp2"
        app:numDigits="6" />

</androidx.constraintlayout.widget.ConstraintLayout>